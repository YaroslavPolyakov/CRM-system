<Window x:Class="CRM.DialogSelectFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DialogSelectFolder" Height="300" Width="300" Background="#FF505883" 
        ResizeMode="NoResize">

    <Grid>
        <TextBlock Foreground="White" Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="Выбранный каталог" VerticalAlignment="Top" Width="187" />
        <Button Background="#FF00A8AC" FontFamily="Roboto Th" Foreground="White"  Content="Вверх" Height="23" HorizontalAlignment="Right" Margin="0,12,12,0" Name="button1" VerticalAlignment="Top" Width="61" Click="button1_Click" />
        <ListBox  Height="164" HorizontalAlignment="Left" Margin="12,41,0,0" Name="listBox1" VerticalAlignment="Top" Width="254" MouseDoubleClick="mouseDoubleClickOnListBox" SelectionChanged="currentSelect" Background="#FFC5DFFF" />
        <Button Background="#FF00A8AC" FontFamily="Roboto Th" Foreground="White" Content="Отмена" Height="23" HorizontalAlignment="Right" Margin="0,226,12,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
        <Button Background="#FF00A8AC" FontFamily="Roboto Th" Foreground="White" Content="Я выбрал" Height="23" HorizontalAlignment="Left" Margin="110,226,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click" />
    </Grid>
</Window>
