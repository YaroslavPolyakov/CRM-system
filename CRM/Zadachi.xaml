<UserControl x:Class="CRM.Zadachi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             mc:Ignorable="d" 
             d:DesignHeight="737" d:DesignWidth="1139"
             x:Name="p_Zadachi">
    <Grid Height="727" VerticalAlignment="Bottom" Margin="0,0,0,10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="87" VerticalAlignment="Top" Width="1139">
            <Button Background="#FF00A8AC" Foreground="White" FontFamily="Roboto Th" Content="Добавить" Height="50" Margin="300,15,0,0" VerticalAlignment="Top" Width="180" FontSize="22" Click="Button_Add"/>
            <Button Background="#FF00A8AC" Foreground="White" FontFamily="Roboto Th" Content="Изменить" Height="50" Margin="30,15,0,0" VerticalAlignment="Top" Width="180" FontSize="22" Click="Button_Change"/>
            <Button Background="#FF00A8AC" Foreground="White" FontFamily="Roboto Th" Content="Удалить" Height="50" Margin="30,15,0,0" VerticalAlignment="Top" Width="180" FontSize="22" Click="Button_Del"/>
        </StackPanel>
        <DataGrid HorizontalAlignment="Left" Margin="24,87,0,0" VerticalAlignment="Top" Height="612" Width="1080"/>

    </Grid>
</UserControl>
